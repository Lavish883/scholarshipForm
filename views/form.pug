html 
    head 
        link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.css" integrity="sha512-cyzxRvewl+FOKTtpBzYjW6x6IAYUCZy3sGP40hn+DQkqeluGRCax7qztK2ImL64SA+C7kVWdLI6wvdlStawhyw==" crossorigin="anonymous" referrerpolicy="no-referrer")
        meta(name="viewport" content="width=device-width, initial-scale=1.0")
        style 
            include css/style.css
        style 
            include css/form.css
        style #{customCSS}
    body 
        div(id="error" style="color:red;")
    

        div.modal#modal
            div.modal-content
                h2 Crop Image
                div.imgContainer 
                    img#profileImage(src="", alt="")
                input(type="submit" id="doneWithImage", value="Done") 

        form#form 
            h1 #{formSettings.nameOfForm}
            p #{formSettings.formIntroduction}

            if formSettings.imageUploadWantedInForm
                div.profilePictureContainer
                    div#imagePreview
                        img(src=image, width="200")
                    div.infoContainer
                        p #{formSettings.textNextToImage}
                        input(style="border:none;padding:0px;" type="file" id="personImage" accept="image/*")

            div !{formHTML}
            button#sumbitFormBtn(class="showMoreBtn" value="Submit") Submit

        div.autoSaveIndicator
            p Saving... 
            img(src="/publicImages/saving.svg", alt="")
        script(src="https://cdnjs.cloudflare.com/ajax/libs/cropperjs/1.5.13/cropper.min.js" integrity="sha512-6lplKUSl86rUVprDIjiW8DuOniNX8UDoRATqZSds/7t6zCQZfaCe3e5zcGaQwxa8Kpn5RTM9Fvl3X2lLV4grPQ==" crossorigin="anonymous" referrerpolicy="no-referrer") 
        
        script
            include js/form.js

        script. 
            var formEndText = !{JSON.stringify(formSettings.formEndText).replace(/<\//g, '<\\/')}
        include includes/footer.pug